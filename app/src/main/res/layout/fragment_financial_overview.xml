<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutbarchart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FinancialOverviewFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:text="Tình hình thu chi"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/blue"
        android:textColor="@color/white"/>

    <!-- Thoi gian bat dau-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <EditText
            android:id="@+id/edit_rep_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ngày bắt đầu"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <Button
            android:id="@+id/btt_rep_start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/date_select"
            app:backgroundTint="@null"
            android:textSize="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="25dp"
            android:text="Từ ngày"/>
    </LinearLayout>

    <!-- Thoi gian ket thuc-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/edit_rep_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ngày kết thúc"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:text=""/>
        <Button
            android:id="@+id/btt_rep_end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/date_select"
            app:backgroundTint="@null"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="25dp"
            android:textSize="20dp"
            android:text="Đến ngày"/>
    </LinearLayout>

    <!-- Tong tien thu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mức thu"
            android:textSize="28dp"
            android:textColor="@color/black"

            />
        <View
            android:id="@+id/mucthu"
            android:layout_width="320dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/view_1"
            />
        <EditText
            android:id="@+id/edit_tienthu"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="vnd"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text=""/>
    </LinearLayout>

    <!-- Tong tien chi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mức chi"
            android:textSize="28dp"
            android:textColor="@color/black"

            />
        <View
            android:id="@+id/mucchi"
            android:layout_width="320dp"
            android:layout_height="8dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/view_2"
            />
        <EditText
            android:id="@+id/edit_tienchi"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="vnd"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>